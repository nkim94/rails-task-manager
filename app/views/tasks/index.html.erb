<h1 class="title">My Tasks</h1>

<ul>
  <% @tasks.each do |task| %>
    <li>
      <% if task.completed? %>
        <i class="far fa-check-square"></i>
      <% else %>
        <i class="far fa-square"></i>
      <% end %>
      <%= link_to "#{task.title}", task_path(task), class: "taskList" %>
      |
      <%= link_to '<i class="far fa-trash-alt"></i>'.html_safe, task_path(task), class: "taskDelete", method: :delete, data: { confirm: "Are you sure?",  } %>
    </li>
  <% end %>
</ul>

<%= link_to '<i class="fas fa-plus"></i> Add a new task!'.html_safe, new_task_path, class: "newTask" %>
